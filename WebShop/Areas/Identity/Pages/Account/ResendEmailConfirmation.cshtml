@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Skicka email-bekräftelse igen";
}

<h4 style="margin-top:40px">@ViewData["Title"]</h4>
<h5>Skriv in din email-adress.</h5>
<hr />
<div id="resend_email_conf" class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input id="resend_email" asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button id="resend" type="submit" class="w-100 btn btn-lg btn-dark">Skicka</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
