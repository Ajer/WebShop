@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glömt ditt lösenord ?";
}

<h4 style="margin-top:40px">@ViewData["Title"]</h4>
<h5>Skriv in din email.</h5>
<hr />
<div id="forgot_password" class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button id="forgot-pass" type="submit" class="w-100 btn btn-lg btn-dark" style="margin-bottom:20px;">Återställ lösenord</button>
        </form>
        <a id="back-to-login"  asp-page="./Login" >Tillbaka till Login</a>
    </div>  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
