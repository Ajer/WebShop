@page
@model LoginModel

@{
    ViewData["Title"] = "MediaSales - Logga in";
}


<div class="row" id="login" style="margin-top:30px;">
    <div class="col-md-6">
        <section>
            <form id="account" class="identity" method="post">
                <h3>Logga in</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" id="login_email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" id="login_pass" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input id="login_rememberme" class="form-check-input" asp-for="Input.RememberMe" />
                        @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@ Kom ihåg mig på den här datorn
                    </label>
                </div>
                <div>             
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark"><span role="status" aria-hidden="true" class="long_t"></span>Logga in</button>
                </div>
                <div style="margin-top:30px">
                    <p style="margin-bottom:5px">
                        <a id="forgot-password" asp-page="./ForgotPassword">Glömt ditt lösenord?</a>
                    </p>
                    <p style="margin-bottom:5px">
                        <a id="new-user" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrera ett nytt konto</a>
                    </p>
                    <p style="margin-bottom:5px;">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Skicka email-bekräftelse igen</a>
                    </p>
                </div>
            </form>      
        </section>
    </div>
    <div class="col-md-4 col-md-offset-2">
        <section>
            @* <h3>Använd ett annat konto för att logga in.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                          <div>
                                <p>
                                   Det finns inga externa inloggningsmoduler. Se denna <a id="login_options" href="https://go.microsoft.com/fwlink/?LinkID=532715">artikel</a>.
                                </p>
                          </div>
                }
                else
                {
                     <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                           <div>
                               <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                     <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                                </p>
                           </div>
                     </form>
                }
            } *@
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
