                    <a href="#" class="mt-auto btn btn-dark" style="max-width:200px">Lägg i varukorgen</a>
                    <!-- </div> -->
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card" style="min-width:240px;height:100%;">
                <img src="~/Images/Products/Desktops/HP_Pavilion_TP01_3042_1.jpg" class="card-img-top" alt="">
                <div class="card-body d-md-flex flex-column">
