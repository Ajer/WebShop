@model WebShop.Dto.ProductDto

@{
    ViewData["Title"] = "MediaSales - ProduktDetaljer";
}


<section id='DetailSection' style="margin-top:60px;min-height:700px;">
    <div class="container">
        <div class="row mt-4">
            <div class="col-12 col-xl-8  d-flex justify-content-center align-items-start">

                <img  src="~/Images/Products/@Model.CatName/@Model.ImageUrl" width="500" height="400" />
               
            </div>
            <div class="col-12 col-xl-3 d-flex justify-content-between ms-2 order_summary" style="background-color:#f2f2f2;border-radius:4px">
                <div class="container">

                    <p class="mt-3" style="font-weight:bold">Produktöversikt</p>
                    <hr style="color:black" />
                    


                    <div class="row">
                        <div class="col-6"><p>Pris</p></div>
                        <div class="col-6" style="font-size:18px;font-weight:bold;text-align:right"><p> </p></div>
                    </div>
                    <div class="row">
                        <div class="col-6"><p>Varav Moms</p></div>
                        <div class="col-6" style="font-size:18px;font-weight:bold;text-align:right"><p></p></div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6" style="font-weight:bold"><p>Totalbelopp (SEK)</p></div>
                        <div class="col-6" style="font-size:18px;font-weight:bold;text-align:right"><p></div>
                    </div>

                    <div class="mt-auto">
                        <form class="cartAdd" asp-controller="Cart" asp-action="AddToCart" method="post" asp-route-id="@Model.Id">
                            <input type="submit" value="Lägg i varukorgen" id="cart-btn" class="btn btn-dark" style="max-width:200px" />
                        </form>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>


























