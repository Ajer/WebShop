            <div class="col-12 col-xl-8 d-flex justify-content-center align-items-center myslideshow">
                <div class="slideshow-container">

                    <div class="mySlides">
                        @* <div class="numbertext">1 / 3</div> *@
                        <img src="~/Images/Products/Slideshow/HP_Pavilion_Gaming_Desktop_TG01_1.jpg" style="height:200px;width:100%">
                        
