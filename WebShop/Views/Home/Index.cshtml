@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" id="home_index" style="margin-top:30px">

   <img src="~/Images/logo/ms_4_1.png" style="margin-top:-40px"/>
    <div style="display:inline-block;">
        <h4>Välkommen till MediaSales</h4>
        <p class="header_slogan" >Vi har allt inom Hemelektronik</p>
    </div>
   

  <section id='heroSection' style="margin-top:30px;">
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-4  d-flex justify-content-center align-items-center mycats">
                <ul class="m-0 p-0">
                    <li><button onclick="window.location.href='/Identity/Account/Login'"><img src="~/Images/category_btn/desktop_24.png" /><span style="margin-left:20px">Desktops</span></button></li>
                    <li><button onclick="window.location.href='/Identity/Account/Register'" href="#"><img src="~/Images/category_btn/laptop2_24.png" /><span style="margin-left:20px">Laptops</span></button></li>
                    <li><button onclick="" href="#"><img src="~/Images/category_btn/tv2_24.png" /><span style="margin-left:20px"></span>TV</button></li>
                    <li><button onclick="" href="#"><img src="~/Images/category_btn/earphones2_24.png" /><span style="margin-left:20px">Hörlurar</span></button></li>
                    <li><button onclick="" href="#"><img src="~/Images/category_btn/media2_24.png" /><span style="margin-left:20px">Media</span></button></li>
                </ul>
            </div>
           
            <div class="col-12 col-xl-8 d-flex justify-content-center align-items-center">
                <div class="slideshow-container">

                    <div class="mySlides">
                        @* <div class="numbertext">1 / 3</div> *@
                        <img src="~/Images/Products/Slideshow/HP_Pavilion_Gaming_Desktop_TG01_1.jpg" style="height:200px;width:100%">
                        
                        @* <div class="text">Caption Text</div> *@
                    </div>

                    <div class="mySlides">
                        @* <div class="numbertext">2 / 3</div> *@              
                            <img src="~/Images/Products/Slideshow/HP_Pavilion_TP01_3042_1.jpg" style="height:200px;width:100%">
                            @* <div class="text">Caption Two</div> *@
                    </div>

                    <div class="mySlides">
                       @*  <div class="numbertext">3 / 3</div> *@
                            <img src="~/Images/Products/Slideshow/desktop-inspiron-3030-mt_1.jpg" style="height:200px;width:100%">
                        @* <div class="text">Caption Three</div> *@
                    </div>

                    <div style="text-align:center">
                       <span class="dot" onclick="currentSlide(1)"></span>
                       <span class="dot" onclick="currentSlide(2)"></span>
                       <span class="dot" onclick="currentSlide(3)"></span>
                    </div>

                    <!-- Next and previous buttons -->
                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>
                </div>
            </div>
          </div>
     </div>
  </section>
</div>